# conjur policy load --context api-keys.json --as-group operations Conjurfile
---
- !policy 
  id: prod/ansible/v1
  body:
      - !variable ec2/bootstrap_private_key
      - !variable ec2/key_name

    - !layer

    - !permit
      role: !layer
      privilege:
        - read
        - execute
      resource: *variables

- !host ee/ansible

- !user ee-ansible

- !grant
  role: !layer prod/ansible/v1
  member: !host ee/ansible
