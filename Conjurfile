- !policy
  id: enterprise-example
  body:
    - &variables
      - !variable
        id: ec2/private_key
        mime_type: application/x-pem-file
  
      - !variable
        id: ec2/access_key_id
      - !variable
        id: ec2/secret_access_key
      - !variable
        id: ec2/region

    - !group
      id: secrets-users
      
    - !permit
      role: !group secrets-users
      privileges: [ read, execute ]
      resource: *variables

- !grant
  role: !group enterprise-example/secrets-users
  member: !group v4/developers
  
# cat Conjurfile | conjur policy load --as-group v4/ops
# cat ~/Downloads/enterprise-example.pem| conjur variable values add enterprise-example/ec2/private_key
